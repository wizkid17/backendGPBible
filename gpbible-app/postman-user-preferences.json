            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bibleVersion\": {\"id\": \"{{versionId}}\"},\n  \"denomination\": {\"id\": \"{{denominationId}}\"},\n  \"selectedAvatarId\": \"avatar456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/user-preferences/{{preferenceId}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "user-preferences",
            "{{preferenceId}}"
          ]
        }
      }
    },
    {
      "name": "Delete User Preference",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
