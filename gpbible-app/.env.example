# Configuración de aplicación
NODE_ENV=development
PORT=3000

# Configuración de base de datos
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=your_db_name

# JWT
JWT_SECRET=your-jwt-secret-key

# Configuración por defecto de correo (se usará como fallback)
EMAIL_USER=your-email@example.com
EMAIL_APP_PASSWORD=your-email-app-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_FROM_NAME=GPBible App

# CONFIGURACIÓN PARA MÚLTIPLES PROVEEDORES
# Puedes configurar uno o varios de los siguientes proveedores

# Gmail configuration
GMAIL_USER=your-gmail@example.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Outlook configuration
OUTLOOK_USER=your-outlook@outlook.com
OUTLOOK_APP_PASSWORD=your-outlook-password

# Yahoo configuration
YAHOO_USER=your-yahoo@yahoo.com
YAHOO_APP_PASSWORD=your-yahoo-app-password

# OTROS PROVEEDORES
# Si necesitas configurar otros proveedores específicos, puedes agregarlos
# siguiendo el mismo formato y luego actualizando el EmailService.

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500 