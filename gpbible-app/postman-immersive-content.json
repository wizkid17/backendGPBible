            ],
            "url": {
              "raw": "{{base_url}}/tour/should-show",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "tour",
                "should-show"
              ]
            }
          }
        },
        {
          "name": "Get Tour Progress",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tour/progress",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "tour",
                "progress"
              ]
            }
          }
        },
        {
          "name": "Complete Tour",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tour/complete",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "tour",
                "complete"
              ]
            }
          }
        },
        {
          "name": "Skip Tour",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tour/skip",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "tour",
                "skip"
              ]
            }
          }
        }
      ]
    }
  ]
} 