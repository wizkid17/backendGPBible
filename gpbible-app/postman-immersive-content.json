{
  "info": {
    "name": "GPBible API - Immersive Content",
    "description": "Endpoints for immersive Bible stories and application tour",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Historias Inmersivas",
      "item": [
        {
          "name": "Get All Stories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/immersive-stories?limit=10&offset=0",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Get Featured Stories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/immersive-stories/featured",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "featured"
              ]
            }
          }
        },
        {
          "name": "Get Story By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/immersive-stories/{{storyId}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "{{storyId}}"
              ]
            }
          }
        },
        {
          "name": "Get Stories By Category",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/immersive-stories/category/old-testament",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "category",
                "old-testament"
              ]
            }
          }
        },
        {
          "name": "Track Story Progress",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"storyId\": \"{{storyId}}\",\n  \"progressPercentage\": 75,\n  \"timeSpentSeconds\": 320\n}"
            },
            "url": {
              "raw": "{{base_url}}/immersive-stories/progress",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "progress"
              ]
            }
          }
        },
        {
          "name": "Mark Story Complete",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"storyId\": \"{{storyId}}\",\n  \"rating\": 5,\n  \"feedback\": \"Me encant√≥ esta historia y las ilustraciones\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/immersive-stories/{{storyId}}/complete",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "{{storyId}}",
                "complete"
              ]
            }
          }
        },
        {
          "name": "Get User Story Progress",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/immersive-stories/my-progress",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "my-progress"
              ]
            }
          }
        },
        {
          "name": "Add Story to Favorites",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/immersive-stories/{{storyId}}/favorite",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "{{storyId}}",
                "favorite"
              ]
            }
          }
        },
        {
          "name": "Remove Story from Favorites",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/immersive-stories/{{storyId}}/favorite",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "immersive-stories",
                "{{storyId}}",
                "favorite"
              ]
            }
          }
        }
      ]
    },
    {
