          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"groupId\": \"{{groupId}}\",\n  \"memberIds\": [\"{{userId1}}\", \"{{userId2}}\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/messaging/groups/members",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "messaging",
            "groups",
            "members"
          ]
        }
      }
    },
